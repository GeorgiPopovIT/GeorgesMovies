@model DetailCommentViewModel

@if (Model.Comments.Count() == 0)
{
    <h2 class="text-center">No comments</h2>
}
else {
<div class="row d-flex ">
    <div class="col-md-7 offset-2 col-lg-7 offset-2">
        <div class="card shadow-0 border" style="background-color: #f0f2f5;">
            <div class="card-body p-4">
                @foreach (var comment in Model.Comments)
                {
                    <div class="card mb-4">
                        <div class="card-body">
                            <span>User: </span>
                            <span class="font-weight-bold"> @comment.UserFullName</span>

                            <div class="mb-2"></div>

                            <div class="d-flex justify-content-between">
                                <div class="d-flex flex-row align-items-center">

                                    <p>-> @comment.Message</p>
                                </div>
                                <div class="d-flex flex-row float-right">
                                    <form method="post">
                                        <button type="submit"
                                                class="btn btn-danger"
                                                asp-controller="Comment"
                                                asp-action="Delete"
                                                asp-route-id="@comment.Id">Delete
                                        </button>
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                }


            </div>
        </div>
    </div>
</div>
 }

