@model GeorgesMovies.Web.Models.Home.IndexViewModel;

@{
    ViewData["Title"] = "Home Page";
}
<div class="jumbotron">
    <h1 class="display-4">Hello to GeorgesMovies!</h1>
    <p class="lead">This is my first ASP-NET Core project.</p>
    <hr class="my-4">
    <p>It's about presentation of movies.</p>
    <p class="lead">
        <a asp-controller="Movie" asp-action="All" class="btn btn-primary">View All Movies</a>
    </p>

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

        <div class="carousel-inner">
            @for (int i = 0; i < Model.Movies.Count; i++)
            {

<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
    <img class="d-block w-100" width="200" height="600" src="@Model.Movies[i].PictuteUrl" alt="@Model.Movies[i].Title">
    <div class="carousel-caption d-none d-md-block">
        <h5>@Model.Movies[i].Title</h5>
    </div>
</div>}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

