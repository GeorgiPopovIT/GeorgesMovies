@model GeorgesMovies.Web.Models.Home.IndexViewModel;

@{
    ViewData["Title"] = "Home Page";
}
@{
    var movies = Model.Movies;
    var firstMovie = movies.Any() ? movies[0] : null;
    var secondMovie = movies.Count > 1 ? movies[1] : null;
    var thirdMovie = movies.Count > 2 ? movies[2] : null;
}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Welcome to Georges Movies</h1>
        <p class="lead">This is my first ASP.NET Core application.It is about watch trailers of films.</p>
    </div>
</div>


<div class="mb-5"></div>



<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">

    <div class="carousel-inner">
        @for (int i = 0; i < Model.Movies.Count; i++)
        {
            if (i == 0 && movies[i] != null)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" width="200" height="600" src="@movies[i].PictuteUrl" alt="@movies[i].Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@movies[i].Title</h5>
                    </div>
                </div>
            }
            @if (movies[i] != null)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" width="200" height="600" src="@movies[i].PictuteUrl" alt="@movies[i].Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@movies[i].Title</h5>
                    </div>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>