@model AllMoviesViewModel
@{
    ViewData["Title"] = "All Movies";
}
<form method="get">
    <div class="form-group col-md-4">
        <label asp-for="SearchItem"></label>
        <input asp-for="SearchItem" class="form-control" placeholder="Name of film..">
    </div>
    <input class="float-right" type="button" value="Search" />
</form>


<div class="row">
    @foreach (var movie in Model.Movies)
    {
        <div class="col-md-4">
            <div class="card" style="width: 18rem; margin:10px">
                <img class="card-img-top" src="@movie.PictureId" alt="@movie.Title ">
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">@movie.Overview</p>
                    <a href="#" class="btn btn-primary">View more</a>
                </div>
            </div>
        </div>
    }
</div>