@model ManageServiceViewModel

@{
    ViewData["Title"] = "Mange Movies";
}
<h2 class="text-center">Manage Movies</h2>
<br />
<a class="btn btn btn-success float-right"asp-controller="Movie"asp-action="Add">+ Add Movie</a>
<br />
<br />
<a class="btn btn btn-secondary float-right" asp-controller="Actor" asp-action="Add">+ Add Actor to movie</a>

<br />
<br />
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Genre</th>
            <th scope="col">Rating</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model.ManageList)
        {
            <tr>
                <th>@movie.Title</th>
                <td>@movie.Genre</td>
                <td>@movie.Rating</td>
                <td>
                    <a class="btn btn-warning"
                       asp-controller="Movie" 
                       asp-action="Edit"
                       asp-route-id="@movie.Id">Edit
                    </a>
                    <a class="btn btn-danger"
                       asp-controller="Movie"
                       asp-action="Delete"
                       asp-route-id="@movie.Id">Delete
                    </a>
                    @*<button class="btn btn-danger" value="Delete" asp-controller="Movie" asp-route="@movie.Id">*@
                    
                </td>
            </tr>
        }
    </tbody>
</table>