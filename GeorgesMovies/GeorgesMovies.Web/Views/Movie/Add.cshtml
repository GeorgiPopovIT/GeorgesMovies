@model AddMovieFormModel
@{
    ViewData["Title"] = "Add Movie";
}

<h2 class="text-center">Add movie</h2>
<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter movie title">
                <span asp-validation-for="Title" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year">Year</label>
                <input asp-for="Year" class="form-control" placeholder="Enter year of making the film ">
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time">Time</label>
                <input asp-for="Time" class="form-control" placeholder="Enter time of movie ">
                <span asp-validation-for="Time" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleaseInfo">Realease Information</label>
                <input asp-for="ReleaseInfo" class="form-control" placeholder="Enter release info about movie ">
                <span asp-validation-for="ReleaseInfo" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Overview">Overview</label>
                <textarea asp-for="Overview" class="form-control" rows="2" placeholder="Enter a overview..."></textarea>
                <span asp-validation-for="Overview" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Review">Review</label>
                <textarea asp-for="Review" class="form-control" rows="4" placeholder="Enter a description"></textarea>
                <span asp-validation-for="Review" class="small text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Director">Director (Only First name and Last name)</label>
                <input asp-for="Director" class="form-control" placeholder="Enter director's name'">
                <span asp-validation-for="Director" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PictureUrl"></label>
                <input asp-for="PictureUrl" class="form-control" placeholder="Enter picture to movie">
                <span asp-validation-for="PictureUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieUrl"></label>
                <input asp-for="MovieUrl" class="form-control" placeholder="Enter the movie url">
                <span asp-validation-for="MovieUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId"></label>
                <select asp-for="GenreId" class="form-control">
                    @foreach (var genre in Model.Genres)
                    {
                        <option value="@genre.Id">@genre.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating</label>
                <input asp-for="Rating" class="form-control" placeholder="Enter rating" />
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary float-right">Add</button>
            <a class="btn btn-secondary float-left"asp-controller="Movie"asp-action="Manage">Go Back</a>
        </form>
    </div>
</div>
