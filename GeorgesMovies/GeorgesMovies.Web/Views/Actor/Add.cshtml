@model GeorgesMovies.Web.Models.Actors.AddActorInputModel
@{
    ViewData["Title"] = "Add actor";
}
<h2 class="text-center">Add actor to film</h2>

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter actor first name">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="Enter actor last name">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Information">Information about actor</label>
                <textarea asp-for="Information" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Information" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieId"></label>
                <select asp-for="MovieId" class="form-control">
                    @foreach (var movie in Model.Movies)
                    {
                        <option value="@movie.Id">@movie.Title</option>
                    }
                </select>
            </div>
            <a class="btn btn-secondary float-left" asp-controller="Movie" asp-action="Manage">Go Back</a>
            <button type="submit" class="btn btn-primary float-right">Add</button>
        </form>
    </div>
</div> 